extends base.pug

block content
    if errorMessage 
        span=errorMessage
    form(method="POST", action="/videos/upload")
        input(placeholder="Title",name="title", required, type="text", maxlength=80)
        input(placeholder="Description", required, type="text", name="description", minlength=20)
        input(placeholder="Hashtags, separated by comma", required, type="hashtags", name="hashtags")
        input(type="submit", value="Upload Video")
